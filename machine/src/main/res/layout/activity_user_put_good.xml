<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.test.UserPutGoodActivity"
    android:background="@drawable/bg_main_grey">

    <include layout="@layout/layout_toolbar"
        android:id="@id/toolbar"/>

    <TextView
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="@string/td_code"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="@color/green_word"/>
    <LinearLayout
        android:layout_below="@id/tv_title"
        style="@style/lly_outermost_style">

        <LinearLayout
            style="@style/lly_size_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/put_1"/>

            <TextView
                android:drawableTop="@drawable/circle_finger_1"
                style="@style/textview_item_style"
                android:layout_marginTop="20dp"
                android:text="@string/td_code_1"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            style="@style/lly_size_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/put_2"/>

            <TextView
                android:drawableTop="@drawable/circle_finger_2"
                style="@style/textview_item_style"
                android:layout_marginTop="20dp"
                android:text="@string/td_code_2"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            style="@style/lly_size_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/put_3"/>

            <TextView
                android:drawableTop="@drawable/circle_finger_3"
                style="@style/textview_item_style"
                android:layout_marginTop="20dp"
                android:text="@string/td_code_3"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/inputArea"
        android:textColor="#00000000"
        android:textCursorDrawable="@null"
        android:autoText="false"
        android:background="#00000000" />


</RelativeLayout>
